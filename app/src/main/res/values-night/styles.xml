<resources>

    <!--Theme.AppCompat.Light.DarkActionBar-->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="NumberTextViewStyle">@style/CustomNumberTextViewStyle</item>
    </style>

    <style name="CustomNumberTextViewStyle" parent="Widget.NumberTextViewStyle">
        <item name="android:textColor">@color/app_color_theme_4</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="AnotherCustomNumberTextViewStyle" parent="Widget.NumberTextViewStyle">
        <item name="android:textColor">@color/app_color_theme_9</item>
        <item name="android:textSize">50sp</item>
    </style>

</resources>
